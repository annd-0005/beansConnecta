<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean id="userService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="vn.sun.services.client.impl.UserServicesImpl">
				<property name="usersDAO" ref="usersDAO" />
			</bean>
		</property>
	</bean>

	<bean id="jobTypesService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="vn.sun.services.client.impl.JobTypeServicesImpl">
				<property name="jobTypesDAO" ref="jobTypesDAO" />
			</bean>
		</property>
	</bean>
	
	<bean id="candidatesService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="vn.sun.services.client.impl.CandidateServicesImpl">
				<property name="candidatesDAO" ref="candidatesDAO" />
			</bean>
		</property>
	</bean>

	<bean id="companiesService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="vn.sun.services.client.impl.CompanyServicesImpl">
				<property name="companiesDAO" ref="companiesDAO" />
			</bean>
		</property>
	</bean>
</beans>